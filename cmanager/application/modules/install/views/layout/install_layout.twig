<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Creamture Framework</title>
        <meta name="description" content="Creamture Framework installation">
        <meta name="viewport" content="width=device-width">
        {{ assets_css_group('main_css', array('bootstrap.min.css', 'bootstrap-responsive.min.css')) }}
        {{ assets_css_group('install_css', array( module_assets['css']~'install.css')) }}

        {{ assets_js_group('main_js', array('libs/modernizr-2.6.1-respond-1.1.0.min.js', 'libs/jquery-1.7.2.min.js', 'libs/bootstrap/bootstrap.min.js','libs/underscore-min.js','libs/backbone-min.js')) }}
        {{ assets_js_group('install_js', array(module_assets['js']~'install.js')) }}
        <link rel="shortcut icon" href="{{img_path}}logo-menu.png" />
    </head>
    <body style="background:#fff url({{img_path}}bg.png);">
        <div class="container-fluid">
            <!--[if lt IE 7]>
                <p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.</p>
            <![endif]-->
            <div class="navbar">
              <div class="navbar-inner">
                <a class="brand" href="{{ install_path }}/features"><img src="{{img_path}}logo-menu.png" /> Creamture <span>Framework</span></a>
                <ul class="nav">
                  <li class="{{getActualSection('features')}}"><a href="{{ install_path }}/features">{% trans "Features" %}</a></li>
                  <li class="{{getActualSection('setup')}}"><a href="{{ install_path }}/setup">{% trans "Setup" %}</a></li>
                  <li class="{{getActualSection('database')}}"><a href="{{ install_path }}/database">{% trans "Database" %}</a></li>
                  <li class="{{getActualSection('documentation')}}"><a href="{{ install_path }}/documentation">{% trans "Documentation" %}</a></li>
                  <li class="{{getActualSection('licenses')}}"><a href="{{ install_path }}/licenses">{% trans "Licenses" %}</a></li>
                  <li class="{{getActualSection('thanks')}}"><a href="{{ install_path }}/thanks">{% trans "Thanks" %}</a></li>
                </ul>
              </div>
            </div>

            <div id="content" class="row-fluid container">
              {% block content %}{% endblock %}
            </div>

            <div class="footer row-fluid">{% trans "made with love in DIGIO Soluciones Digitales" %} &copy; 2012</div>
        </div>
    </body>
</html>
